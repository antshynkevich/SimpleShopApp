@model Register
<form method="post" class="form-control">
    <div>
        <h3>Registration</h3>
    </div>
    <div class="text-danger fw-bold" asp-validation-summary="ModelOnly"></div>
    <div class="row">
        <div class="col-4">
            <label asp-for="Username"></label>
            <input class="form-control" asp-for="Username"/>
            <span asp-validation-for="Username"></span>
        </div>
    </div>
    
    <div class="row">
        <div class="col-4">
            <label asp-for="Password"></label>
            <input class="form-control" asp-for="Password"/>
            <span asp-validation-for="Password"></span>
        </div>
    </div>

    <div class="row">
        <div class="col-4">
            <label asp-for="ConfirmPassword"></label>
            <input class="form-control" asp-for="ConfirmPassword"/>
            <span asp-validation-for="ConfirmPassword"></span>
        </div>
    </div>

    <div>
        <button class="btn btn-success" type="submit" asp-controller="Account" asp-action="Register">Registration</button>
    </div>
</form>
