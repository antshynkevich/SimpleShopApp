@model Cart

@{
    if (Model == null || Model.Items.Count == 0)
    {
        <h3>Your cart is empty</h3>
    }
    else
    {
        <div class="row">
            <div class="col-8">
                <table class="table table-bordered table-striped">
                    <thead>
                    <tr>
                        <th class="text-center">Image</th>
                        <th class="text-center">Product Name</th>
                        <th class="text-center">Price USD</th>
                        <th class="text-center">Quantity</th>
                        <th class="text-center">Change Qty</th>
                        <th class="text-center">Value USD</th>

                    </tr>
                    </thead>
                    <tbody>
                    @foreach (var item in Model.Items)
                    {
                        <tr>
                            <td class="text-center"><img class="w-50" src="@item.ProductViewModel.ImagePath" alt="sus"/></td>
                            <td>@item.ProductViewModel.Name</td>
                            <td>@item.ProductViewModel.Cost</td>
                            <td>@item.Amount</td>
                            <td>
                                <a class="btn btn-dark" asp-controller="Cart" asp-action="IncreaseAmount"
                                   asp-route-itemId="@item.Id">+</a>
                                <a class="btn btn-dark" asp-controller="Cart" asp-action="DecreaseAmount"
                                   asp-route-itemId="@item.Id">-</a>
                            </td>
                            <td>@item.Cost</td>

                        </tr>
                    }
                    </tbody>
                </table>
                <div>
                    <h3 class="text-end">Full Cost:</h3>
                    <h3 class="text-end">@Model.Cost</h3>
                </div>
                <div class="text-center">
                    <a role="button" class="btn btn-primary" asp-controller="Home" asp-action="Index">Continue shopping</a>
                    <a role="button" class="btn btn-danger" asp-controller="Cart" asp-action="Clear">Clear cart</a>
                    <a role="button" class="btn btn-success" asp-controller="Order" asp-action="Index">Place the order</a>
                </div>
            </div>
        </div>
    }
}
