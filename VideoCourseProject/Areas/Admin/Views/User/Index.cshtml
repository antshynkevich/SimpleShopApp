@model List<UserAccount>
  
<div class="row">
    @await Html.PartialAsync("AdminMenu")

    <div class="col-9">
        <h3>Users List</h3>
        <table class="table table-striped">    
            <thread>
                <tr>
                    <th>#</th>
                    <th>E-mail (login)</th>
                    <th>Phone</th>
                    <th></th>
                </tr>
            </thread>
            <tbody>
            @for (int i = 0; i < Model.Count; i++)
            {
                <tr>
                    <td>@(i + 1)</td>
                    <td>@Model[i].Name</td>
                    <td>@Model[i].Phone</td>
                    <td><a asp-area="Admin" asp-controller="User" asp-action="Details" 
                           asp-route-name="@Model[i].Name" class="btn btn-secondary">Edit</a></td>
                </tr>
            }
            </tbody>
        </table>
    </div>
</div>