@model UserDeliveryInfo
<form method="post">
    <div>
        <h3>Please input your delivery info</h3>
    </div>
    <div class="text-danger fw-bold" asp-validation-summary="ModelOnly"></div>
    <div class="container">
        <div class="row">
            <div class="col-4">
                <div class="col">
                    <label asp-for="Name">Please input your Name</label>
                    <input class="form-control" asp-for="Name"/>
                    <span asp-validation-for="Name" class="text-danger fw-bold"></span>
                </div>
                <div class="row">
                    <div class="col">
                        <label asp-for="Address">Your Address</label>
                        <input type="text" class="form-control" asp-for="Address"/>
                        <span asp-validation-for="Address" class="text-danger fw-bold"></span>
                    </div>
                </div>
                <div class="row">
                    <div class="col">
                        <label asp-for="Phone">Your Number</label>
                        <input type="tel" class="form-control" asp-for="Phone"/>
                        <span asp-validation-for="Phone" class="text-danger fw-bold"></span>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div>
        <button asp-controller="Order" asp-action="Buy" class="btn btn-success mt-3" type="submit" >Do order</button>
    </div>
</form>
