@model Product

<form method="post">
    <h3>Edit product properties</h3>
    <div class="text-danger fw-bold" asp-validation-summary="ModelOnly"></div>
    <input type="hidden" name="Id" value="@Model?.Id"/>
    <div class="row">
        <div class="col-6">
            <label asp-for="Name"></label>
            <input class="form-control" asp-for="Name" value="@Model?.Name"/>
            <span asp-validation-for="Name" class="text-danger fw-bold"></span>
        </div>
    </div>
    
    <div class="row">
        <div class="col-6">
            <label asp-for="Description"></label>
            <input class="form-control" asp-for="Description" value="@Model?.Description"/>
            <span asp-validation-for="Description" class="text-danger fw-bold"></span>
        </div>
    </div>

    <div class="row">
        <div class="col-6">
            <label asp-for="Cost"></label>
            <input type="number" class="form-control" asp-for="Cost" value="@Model?.Cost"/>
            <span asp-validation-for="Cost" class="text-danger fw-bold"></span>
        </div>
    </div>
    <button type="submit" class="btn btn-success mt-2" asp-controller="Admin" asp-action="EditProduct">Save changes</button>
</form>
